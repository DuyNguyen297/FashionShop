                                    <div class="form-group">
                                        <label class="font-weight-semibold" for="userName">Số điện thoại:</label>
                                        <div class="input-affix">
                                            <i class="prefix-icon anticon anticon-user"></i>
                                            <input type="tel" class="form-control" required placeholder="Số điện thoại" pattern="[0-9]{10}" name="username" id="username">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="font-weight-semibold" for="password">Mật khẩu:</label>
                                        <a class="float-right font-size-13 text-muted" href="javacript:void(0);">Quên mật khẩu?</a>
                                        <div class="input-affix m-b-10">
                                            <i class="prefix-icon anticon anticon-lock"></i>
                                            <input type="password" class="form-control" required placeholder="Mật khẩu" name="password" id="password">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <span class="font-size-13 text-muted">
                                                Chưa có tài khoản?
