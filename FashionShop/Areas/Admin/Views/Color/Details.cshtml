@model FashionShop.Models.Color

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="page-header">
            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a href="@Url.Action("Index","Dashboard")" class="breadcrumb-item"><i class="fa-solid fa-house mr-1"></i>Trang chủ</a>
                    <a href="@Url.Action("Index","Color")" class="breadcrumb-item">Màu sắc</a>
                    <span class="breadcrumb-item active">Chi tiết</span>
                </nav>
            </div>
        </div>
        <!-- Default box -->

        <div class="card-header">
            <div class="row">
                <div class=" col-md-6">
                    
                </div>
                <div class=" col-md-6 text-right">
                    <a class=" btn btn-primary fa fa-solid fa-arrow-left" href="@Url.Action("Index")"></a>
                    <a class=" btn btn-success fas fa-edit" href="@Url.Action("Edit", new {id = Model.Id})"> </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Details">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label name="Name" class="control-label">Tên</label>
                    <div class="form-control">@Html.DisplayFor(model => model.Name)</div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label name="Code" class="control-label">Mã</label>
                    <div class="form-control">@Html.DisplayFor(model => model.Code)</div>
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </form>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.content -->
</div>