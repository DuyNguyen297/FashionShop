            var code = $("#code-" + id).val();
            var name = $("#name-" + id).val();
            var phone = $("#phone-" + id).val();
            var address = $("#address-" + id).val();

            $("#editid").val(id);
            $("#editcode").val(code);
            $("#editname").val(name);
            $("#editphone").val(phone);
            $("#editaddress").val(address);
            //submit
            document.getElementById("submitEditButton").type = "submit";
            $("#editModal").modal();
        }
        /// cancel
        function cancelOrder(id) {
            $("#cancelid").val(id);
            $("#cancelModal").modal();
        }
        /// import
        function importOrder(id) {
            $("#importid").val(id);
            $("#importModal").modal();
        }
        /// reject
        function rejectOrder(id) {
            $("#rejectid").val(id);
            $("#rejectModal").modal();
        }
        /// return
        function returnOrder(id) {
            $("#returnid").val(id);
            $("#returnModal").modal();
        }
        /// reSetup
        function reSetupOrder(id) {
            $("#resetupid").val(id);
            $("#resetupModal").modal();
        }
        /// delete
        function deleteOrder(id) {
            $("#deleteid").val(id);
            $("#deleteModal").modal();
        }
        ////////////////////////////
        $(document).ready(function () {
            $("#option1, #option2, #option3").click(function () {
                $("#myCollapse").hide();
            });

            $("#option4").click(function () {
                $("#myCollapse").show();
            });

            ///////
            jQuery("#txtCatID").change(function () {
                var Id = jQuery(this).children(":selected").attr("value");
                Id = parseFloat(Id);
                $('#txtCatID option')
                    .removeAttr('selected');
                $("#txtCatID > [value=" + Id + "]").attr("selected", "true");
                $.ajax({
                    url: '/Book/Filtter',
                    datatype: "json",
                    type: "GET",
                    data: {
                        CatID: Id
                    },
                    async: true,
                    success: function (results) {
                        if (results.status == "success") {
                            window.location.href = results.redirectUrl;
                        }
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });
            jQuery("#txtIDXB").change(function () {
                var Id = jQuery(this).children(":selected").attr("value");
                Id = parseFloat(Id);
