@using FashionShop.Models
@using PagedList.Mvc
@model List<FashionShop.Models.Product>
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="m-b-0">Số hóa đơn</p>
                        <h2 class="m-b-0">
                            <span>@(ViewBag.Orders?.Count)</span>
                        </h2>
                    </div>
                    <div class="avatar avatar-icon avatar-lg avatar-red">
                        <i class="anticon anticon-profile"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="m-b-0">Số khách hàng</p>
                        <h2 class="m-b-0">
                            <span>@(ViewBag.Customers?.Count)</span>
                        </h2>
                    </div>
                    <div class="avatar avatar-icon avatar-lg avatar-cyan">
                        <i class=" anticon anticon-user"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="m-b-0">Số sản phẩm</p>
                        <h2 class="m-b-0">
                            <span>@(ViewBag.Products?.Count)</span>
                        </h2>
                    </div>
                    <div class="avatar avatar-icon avatar-lg avatar-gold">
                        <i class="anticon anticon-book"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="m-b-0">Số thương hiệu</p>
                        <h2 class="m-b-0">
                            <span>@(ViewBag.Branchs?.Count)</span>
                        </h2>
                    </div>
                    <div class="avatar avatar-icon avatar-lg avatar-red">
                        <i class="anticon anticon-meh"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="m-b-0">Tổng doanh thu</p>
                        <h2 class="m-b-0">
                            <span> @(ViewBag.SumOrTotal?.ToString("n0")) VNĐ</span>
                        </h2>
                    </div>
                    <div class="avatar avatar-icon avatar-lg avatar-blue">
                        <i class="anticon anticon-dollar"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="m-b-0">Tổng chi</p>
                        <h2 class="m-b-0">
                            <span>@(ViewBag.SumInTotal?.ToString("n0")) VNĐ</span>
                        </h2>
                    </div>
                    <div class="avatar avatar-icon avatar-lg avatar-blue">
                        <i class="anticon anticon-euro"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="m-b-0">Lợi nhuận</p>
                        <h2 class="m-b-0">
                            <span>@(ViewBag.Revenue?.ToString("n0")) VNĐ</span>
                        </h2>
                    </div>
                    <div class="avatar avatar-icon avatar-lg avatar-blue">
                        <i class="anticon anticon-euro"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row ">
    <div class="chat chat-app row col-md-4 card">
        <div class="card  col-md-12">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Mặt hàng</h5>
                    <div>
                        <a href="@Url.Action("Index", "Category")" class="btn btn-icon btn-rounded btn-dark">@(ViewBag.Categories?.Count)</a>
                    </div>
                </div>
                <div class="table-responsive m-t-30">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Progress</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var b in ViewBag.Categories)
                                {
                                    <tr>
                                        <td>
                                            <span>@b.Name</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="progress progress-sm w-100 m-b-0">
                                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 100%"></div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="chat chat-app col-md-8 card">
        <div class="col-md-12 card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h5>Các sản phẩm bán chạy</h5>
                </div>
                <div class="m-t-30">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#Thông tin</th>
                                    <th>Giá bán</th>
                                    <th class="text-center">Số lượng còn lại</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div style="max-width:70px !important">
                                                        <img src="~/Assets/images/product/@item.Image"
                                                             alt=""
                                                             style="width: 70px; height: 70px"
                                                             class="avatar avatar-image rounded" />
                                                    </div>
                                                    <div class="mx-3">
                                                        <p class="font-weight-bold mb-1">@item.Name</p>
                                                        <p class="mb-0 text-nowrap">Mã:<span class="font-weight-semibold"> @item.Code</span></p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="mb-1 text-nowrap">Đơn giá:<span class="font-weight-semibold"> @(item.Price?.ToString("n0"))</span></p>
                                                <p class="text-muted mb-0 text-nowrap">Giảm giá: @(item.Discount != null ? (item.Discount?.ToString("n0")) : "Không")</p>
                                            </td>
                                            <td class="text-center">@item.Quantity</td>
                                            <td>
                                                @if (item.Quantity > 0)
                                                {
                                                    <span class="badge badge-success">Còn hàng</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Hết hàng</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
