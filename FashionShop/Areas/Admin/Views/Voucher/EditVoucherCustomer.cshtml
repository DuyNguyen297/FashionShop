@model FashionShop.AreaModels.CreateVoucherCustomerModel

@{
    ViewData["Title"] = "Cập nhật Voucher";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-body">
        <form action="@Url.Action("EditVoucherCustomer")" method="post">
            <div class="page-header">
                <div class="header-sub-title">
                    <nav class="breadcrumb breadcrumb-dash">
                        <a href="@Url.Action("Index","Dashboard")" class="breadcrumb-item"><i class="fa-solid fa-house mr-1"></i>Trang chủ</a>
                        <a href="@Url.Action("Index","Voucher")" class="breadcrumb-item">Voucher</a>
                        <span class="breadcrumb-item active">Cập nhật voucher dành cho khách hàng</span>
                    </nav>
                </div>
            </div>
            <!-- Default box -->

            <div class="card-header">
                <div class="row">
                    <div class=" col-md-6">

                    </div>
                    <div class=" col-md-6 text-right">
                        <a class=" btn btn-success fa fa-solid fa-arrow-left" href="@Url.Action("Index","Voucher")"></a>
                        <button class="btn btn-primary" type="submit"><i class="fas fas fa-save mr-1"></i>Xác nhận</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label">Tên</label>
                    @Html.EditorFor(model => model.Name, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên Voucher", @required = "required" } })
                </div>
                <div class="row">
                    <div class="form-group col-md-8">
                        <label>Thời gian voucher có hiệu lực</label>
                        <div class="d-flex align-items-center">
                            <input type="text" class="form-control datepicker-input" name="StartDate" value="@(Model.StartDate)" placeholder="Bắt đầu">
                            <span class="p-h-10">Đến</span>
                            <input type="text" class="form-control datepicker-input" name="EndDate" value="@(Model.EndDate)" placeholder="Đến hết ngày">
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label">Số lượng</label>
                        @Html.EditorFor(model => model.Quantity, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "Số lượng", @required = "required" } })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label">Giá trị đơn hàng tối thiểu</label>
                        @Html.EditorFor(model => model.TotalCondition, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "Điều kiện", @required = "required" } })
                    </div>
                    <div class="form-group col-md-6">
                        <label name="Code" class="control-label">Số tiền giảm</label>
                        @Html.EditorFor(model => model.Discount, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "Số tiền giảm", @required = "required" } })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="control-label">Khách hàng</label>
                        @{
                            var customer = ViewBag.Customer as FashionShop.Models.Customer;
                        }
                        <div class="form-control">@(customer.Name + " - " + customer.Phone + " - " + customer.Email + " - " + customer.Address)</div>
                    </div>
                </div>
            </div>
        </form>
        <!-- /.card-body -->
    </div>
    <!-- /.content -->
</div>
