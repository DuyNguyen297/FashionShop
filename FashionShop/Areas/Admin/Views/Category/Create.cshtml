@model FashionShop.Models.Category

@{
    ViewData["Title"] = "Thêm danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-body">
        <form action="@Url.Action("Create")" method="post">
            <div class="page-header">
                <div class="header-sub-title">
                    <nav class="breadcrumb breadcrumb-dash">
                        <a href="@Url.Action("Index","Dashboard")" class="breadcrumb-item"><i class="fa-solid fa-house mr-1"></i>Trang chủ</a>
                        <a href="@Url.Action("Index","Category")" class="breadcrumb-item">Danh mục</a>
                        <span class="breadcrumb-item active">Thêm</span>
                    </nav>
                </div>
            </div>
            <!-- Default box -->

            <div class="card-header">
                <div class="row">
                    <div class=" col-md-6">

                    </div>
                    <div class=" col-md-6 text-right">
                        <a class=" btn btn-success fa fa-solid fa-arrow-left" href="@Url.Action("Index","Category")"></a>
                        <button class="btn btn-primary fas fa-plus-circle " type="submit"></button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label name="Name" class="control-label">Tên</label>
                    <input name="Name" type="text" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label name="Code" class="control-label">Mã</label>
                        <input name="Code" type="text" class="form-control" required />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label name="Outstanding" class="control-label">Nổi bật</label>
                        <input name="Outstanding" type="checkbox" class="form-control" />
                        <span asp-validation-for="Outstanding" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label name="Description" class="control-label">Mô tả</label>
                    <input name="Description" type="text" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </form>
        <!-- /.card-body -->
    </div>
    <!-- /.content -->
</div>