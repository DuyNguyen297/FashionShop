@model FashionShop.ViewModel.ResetPasswordModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Quên mật khẩu</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/Adminassets/images/logo/favicon.png">

    <!-- page css -->
    <!-- Core css -->
    <link href="~/Content/Adminassets/css/app.min.css" rel="stylesheet">
    <!--Custom styles-->
    <link href="~/Content/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/lib/bootstrap/css/toastr.css" />
    <link href="~/Content/css/site.css" rel="stylesheet" />
</head>

<body>
    <div class="app">
        <div class="container-fluid p-h-0 p-v-20 bg full-height d-flex" style="background-image: url('/Content/Adminassets/images/others/login-3.png')">
            <div class="d-flex flex-column justify-content-between w-100">
                <div class="container d-flex h-100">
                    <div class="row align-items-center w-100">
                        <div class="col-md-7 col-lg-5 m-h-auto">
                            <div class="card shadow-lg">
                                <div class="card-body">
                                    <div class="d-flex align-items-center justify-content-between mb-3">
                                        <img class="img-fluid" width="200" alt="" src="~/Content/Adminassets/images/logo/logo-dark.png">
                                    </div>
                                    <form @Url.Action("ResetPassword", "Account") method="post">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            <label class="font-weight-semibold" for="username">Tên đăng nhập:</label>
                                            <div class="input-affix m-b-10">
                                                <i class="prefix-icon anticon anticon-user"></i>
                                                @Html.EditorFor(model => model.UserName, "", new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Tên đăng nhập", @required = "required" } })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <button class="btn btn-primary" type="submit">Gửi lại mật khẩu</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <input type="hidden" id="success" value="@TempData["success"]" />
        <input type="hidden" id="info" value="@TempData["info"]" />
        <input type="hidden" id="warning" value="@TempData["warning"]" />
        <input type="hidden" id="error" value="@TempData["error"]" />

        <input type="hidden" id="subsuccess" value="@TempData["subsuccess"]" />
        <input type="hidden" id="subinfo" value="@TempData["subinfo"]" />
        <input type="hidden" id="subwarning" value="@TempData["subwarning"]" />
        <input type="hidden" id="suberror" value="@TempData["suberror"]" />
    </div>


    <script src="~/Content/Adminassets/js/vendors.min.js"></script>
    <!-- page js -->

    <script src="~/Content/lib/vue/vue.global.min.js"></script>
    <!-- Core JS -->
    <script src="~/Content/Adminassets/js/app.min.js"></script>

    <script src="~/Content/lib/bootstrap/js/toastr.js"></script>
    <script>
        $(document).ready(function () {
            toastr.options = {
                "closeButton": true
            };
            $('.carousel').carousel({
                interval: 3000
            });
        });
        $(function () {
            if ($('#success').val()) {
                displayMessage($('#success').val(), $('#subsuccess').val(), 'success');
            }
            if ($('#info').val()) {
                displayMessage($('#info').val(), $('#subinfo').val(), 'info');
            }
            if ($('#warning').val()) {
                displayMessage($('#warning').val(), $('#subwarning').val(), 'warning');
            }
            if ($('#error').val()) {
                displayMessage($('#error').val(), $('#suberror').val(), 'error');
            }
        });
        var displayMessage = function (title, subTitle, msgType) {
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "positionClass": "toast-top-right",
                "onClick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "8000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };
            toastr[msgType](subTitle, title);
        };
    </script>
</body>

</html>


