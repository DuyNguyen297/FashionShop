@model FashionShop.Models.Account

@{
    ViewData["Title"] = "Tạo tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-2">
        <form action="@Url.Action("Create","Account")" method="post">
            <div class="page-header">
                <div class="header-sub-title">
                    <nav class="breadcrumb breadcrumb-dash">
                        <a href="@Url.Action("Index","Dashboard")" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                        <a href="@Url.Action("Index","Account")" class="breadcrumb-item">Danh sách</a>
                        <span class="breadcrumb-item active">Thêm tài khoản</span>
                    </nav>
                </div>
            </div>
            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row my-1">
                        <div class=" col-md-6">
                        </div>
                        <div class=" col-md-6 text-right">
                            <a class=" btn btn-success fa fa-solid fa-arrow-left" href="@Url.Action("Index","Account")"></a>
                            <button class="btn btn-primary" type="submit"><i class="fas fa-plus-circle mr-1"></i>Xác nhận</button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Tên người sử dụng</label>
                            @Html.EditorFor(model => model.Name, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên", @required = "required" } })
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="control-label">Tên đăng nhập</label>
                            @Html.EditorFor(model => model.UserName, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên đăng nhập", @required = "required" } })
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="control-label">Email</label>
                            @Html.EditorFor(model => model.Email, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @required = "required" } })
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="control-label">Số điện thoại</label>
                            @Html.EditorFor(model => model.Phone, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "Số điện thoại", @required = "required" } })
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                    </div>
                    <div class=" row">
                        <div class="form-group col-md-6 ">
                            <label class="control-label">Mật khẩu</label>
                            @Html.EditorFor(model => model.Password, "", new { htmlAttributes = new { @class = "form-control", @minlength = "5", @placeholder = "Mật khẩu", @required = "required" } })
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="control-label">Vai trò</label>
                            @Html.DropDownListFor(model => model.Role, (SelectList)ViewBag.Role, "-- Chọn quyền --", new { @class = "custom-select", @style = "min-width: 200px;", @required = "required" })                    
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
        </form>
    </section>
    <!-- /.content -->
</div>
